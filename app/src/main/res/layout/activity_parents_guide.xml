<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parent's Guide to Emotion Regulation"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primaryText"
            android:gravity="center"
            android:paddingBottom="24dp" />

        <!-- Tip 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👨‍👩‍👦 Help name emotions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primaryText"
            android:gravity="center"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encourage your child to say 'I'm feeling sad' instead of just crying."
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Tip 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧘‍♂️ Practice deep breathing"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primaryText"
            android:gravity="center"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help your child take slow breaths when upset — like blowing up a balloon."
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Tip 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🤝 Model calm behaviour"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primaryText"
            android:gravity="center"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Children learn by example — show how you handle stress calmly."
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Tip 4 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🗣️ Encourage expressive language"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primaryText"
            android:gravity="center"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use phrases like 'You look frustrated. Want to talk about it?'"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Tip 5 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎨 Use creative outlets"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primaryText"
            android:gravity="center"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encourage drawing, music, or storytelling to let emotions out safely."
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            android:gravity="center"
            android:paddingBottom="24dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="16sp"
            android:textColor="@color/button_text"
            android:backgroundTint="@color/cozy_red"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:drawablePadding="8dp" />

    </LinearLayout>
</ScrollView>
