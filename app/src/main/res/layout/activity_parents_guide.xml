<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parent's Guide to Emotion Regulation"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="👨‍👩‍👦 1. Help your child name their emotions. \n Encourage them to say 'I'm
            feeling sad' instead of just crying."
        android:textSize="16sp"
        android:paddingBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🧘‍♂️ 2. Teach deep breathing. \n Help your child practice slow breathing
            when they are upset."
        android:textSize="16sp"
        android:paddingBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🤝 3. Model calm behavior. \n Kids learn by watching! Stay calm when
            solving problems."
        android:textSize="16sp"
        android:paddingBottom="8dp"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

</LinearLayout>

</ScrollView>
