<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/cozy_mint</item>
        <item name="colorPrimaryDark">@color/cozy_brown</item>
        <item name="colorAccent">@color/cozy_pink</item>
        <item name="android:windowBackground">@color/light_background</item>
    </style>

    <!-- Cozy main button style -->
    <style name="CozyButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/cozy_mint</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">14dp</item>
    </style>

    <!-- Cozy smaller back-style button -->
    <style name="SmallBackButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/cozy_lavender</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Main rounded button -->
    <style name="RoundedButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Special button -->
    <style name="RoundedButtonSpecial">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/secondaryButton</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Buttons in Main -->
    <style name="RoundedButtonMint" parent="RoundedButton">
        <item name="android:backgroundTint">@color/cozy_mint</item>
    </style>

    <style name="RoundedButtonLavender" parent="RoundedButton">
        <item name="android:backgroundTint">@color/cozy_lavender</item>
    </style>

    <style name="RoundedButtonPeach" parent="RoundedButton">
        <item name="android:backgroundTint">@color/cozy_peach</item>
    </style>

</resources>
